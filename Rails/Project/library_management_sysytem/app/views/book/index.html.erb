<div class = "Books Index">
  <h2 align='center'>Books</h2>
  <%= link_to("Add New Book",new_book_path,class=>"action new")%>
  <table class="listing" cellspacing=20>
    <tr class="header">
      <th>Id</th>
      <th>Book Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Publication year</th>
      <th>Quantity Available</th>
      <th>Added On</th>
      <th>Updated On</th>
      <th> Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.id%></td>
      <td><%= book.title%></td>
      <td><%= book.author%></td>
      <td><%= book.genre%></td>
      <td><%= book.publication_year%></td>
      <td><%= book.quantity_available%></td>
      <td><%= book.created_at%></td>
      <td><%= book.updated_at%></td>
      <td class="action">
        <%= link_to("Show",book_path(book),:class=>'action show') %>
        <%= link_to("Edit",edit_book_path(book),:class=>'action edit') %>
        <%= link_to("Delete",delete_book_path(book),:class=>'action delete') %>
    </tr>
    <% end %>
  </table>
</div>

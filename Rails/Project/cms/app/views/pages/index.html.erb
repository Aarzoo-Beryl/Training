<div class="Pages Index">
  <h2>pages</h2>

  <%= link_to("Add New Page",new_page_path,:class=>'action new')%>
  <br><br>

  <table class='listing' summary="Page List" cellspacing="20">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Visible</th>
      <th>Permalink</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.subject_id %></td>
      <td><%= page.position %></td>
      <td><%= page.name.upcase %></td>
      <td><%= page.visible ? "Yes" : "No" %></td>
      <td><%= page.permalink %></td>
      <td class="action">
        <%= link_to("Show",page_path(page),:class=>'action show') %>
        <%= link_to("Edit",edit_page_path(page),:class=>'action edit') %>
        <%= link_to("Delete",delete_page_path(page),:class=>'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<div class="Subjects Index">
  <h2>Subjects</h2>

  <%= link_to("Add New Subject","#",:class=>'action new')%>
  <br><br>
  <table class='listing' summary="Subject List" cellspacing="10">
    <tr class="header">
      <td>#</td>
      <td>Subject</td>
      <td>Visible</td>
      <td>Pages</td>
      <td>Actions</td>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td><%= subject.visible ? "Yes" : "No" %></td>
      <td><%= subject.pages.size %></td>
      <td class="action">
        <%= link_to("Show",subject_path(subject),:class=>'action show') %>
        <%= link_to("Edit",'#',:class=>'action edit') %>
        <%= link_to("Delete",'#',:class=>'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

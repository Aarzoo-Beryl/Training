<div class="Order Index">
  <h1 align="center">ORDERS</h1><hr>
  <%# <%= link_to("Add New Address",new_order_path,:class=>'action new')%>
  <br><br>
  <table class="heading" style="border: 3px solid black;" border="1" cellpadding=13 cellspacing=3 align='center'>
    <tr>
      <th>ID</th>
      <th>CUSTOMER</th>
      <th>DATE</th>
      <th>SHIPPING ADDRESS</th>
      <th>TOTAL BILL</th>
      <th>CREATED AT</th>
      <th>UPDATED AT</th>
      <th>ACTIONS</th>
    </tr>
    <% @orders.each do |order|%>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.customer.name %></td>
      <td><%= order.date %></td>
      <td><%= order.shipping_address %></td>
      <td><%= order.total_order %></td>
      <td><%= order.created_at %></td>
      <td><%= order.updated_at %></td>
      <td>
        <%# <%= link_to("Show",order_path(order),:class=>"action show") %>
        <%# <%= link_to("Edit",edit_order_path(order),:class=>"action edit")%>
        <%# <%= link_to("Delete",delete_order_path(order),:class=>"action delete")%>
      </td>
    </tr>
    <% end %>
  </table>
</div>
